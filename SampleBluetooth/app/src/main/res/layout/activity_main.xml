<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.example.matthias.myapplication.MainActivity">

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
	        android:orientation="vertical">


		<TextView android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:text="Start Bluetooth"
		          android:id="@+id/MainActivity_TextView_StartBluetooth"
		          android:padding="10dp"
		          android:background="@color/azure"/>

		<Space android:layout_width="20dp" android:layout_height="20dp"/>

		<TextView android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:text="View Paired Devices"
		          android:id="@+id/MainActivity_TextView_ViewPairedDevice"
		          android:padding="10dp"
		          android:background="@color/azure"/>

		<Space android:layout_width="20dp" android:layout_height="20dp"/>

		<TextView android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:text="Start Search Nearby Devices"
		          android:id="@+id/MainActivity_TextView_StartSearch"
		          android:padding="10dp"
		          android:background="@color/azure"/>

		<Space android:layout_width="20dp" android:layout_height="20dp"/>

		<TextView android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:text="Stop Search Nearby Devices"
		          android:id="@+id/MainActivity_TextView_StopSearch"
		          android:padding="10dp"
		          android:background="@color/azure"/>

	</LinearLayout>

	<Space android:layout_width="20dp" android:layout_height="20dp"/>

	<ListView
			android:layout_width="match_parent"
			android:layout_height="150dp"
			android:scrollbars="vertical"
			android:id="@+id/MainActivity_ListView_PairedDevices"/>

	<Space android:layout_width="20dp" android:layout_height="20dp"/>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:weightSum="1">

		<TextView android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:layout_weight="0"
		          android:text="Send"
		          android:id="@+id/MainActivity_TextView_sendMessage"
		          android:padding="10dp"
		          android:background="@color/azure"/>

		<Space android:layout_width="20dp" android:layout_height="20dp" android:layout_weight="0"/>

		<EditText
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:id="@+id/MainActivity_EditText_userMessage"
				android:layout_weight="1"/>

	</LinearLayout>

	<Space android:layout_width="20dp" android:layout_height="20dp" android:layout_weight="0"/>

	<TextView android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:text="View Log"
	          android:id="@+id/MainActivity_TextView_viewLog"
	          android:padding="10dp"
	          android:background="@color/azure"/>

</LinearLayout>
